public class TwitterLanguageFilterApp implements LanguageFilter{

    final String input;
    final String outputDir;

    public FileLanguageFilterApp(String i, String o) {
        this.inputFile = i;
        this.outputDir = o;
    }

    public FileLanguageFilterApp(String i) {
        this.inputFile = i;
        this.outputDir = "output";
    }

    @Override
    
    public void filterLanguage(String language) {
        SparkConf conf = (new SparkConf()).setAppName("TwitterLanguageFilter");
        JavaSparkContext sparkContext = new JavaSparkContext(conf);
        JavaRDD<String> sentences = sparkContext.textFile(input);
        JavaRDD<SimplifiedTweet> tweets = sentences.map(line -> new SimplifiedTweet(line));
        JavaRDD<SimplifiedTweet> filteredTweets = tweets.filter(tweet -> tweet.getLanguage().equals(language));
        JavaRDD<String> filteredTweetsString = filteredTweets.map(tweet -> tweet.toString());
